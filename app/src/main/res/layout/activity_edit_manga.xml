<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditManga">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/teal_200">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVISI MANGA"
        android:id="@+id/jdl2"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:fontFamily="cursive"
        ></TextView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_nama_manga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jdl2"
        android:gravity="bottom"
        android:text="Nama Manga : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Deskripsi : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/et_nama_manga"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Genre: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/et_deskripsi"
        android:padding="5dp"/>


    <EditText
        android:id="@+id/et_nama_manga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nama_manga"
        android:textSize="18sp"
        android:hint="masukkan nama manga baru"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/et_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_deskripsi"
        android:textSize="18sp"
        android:hint="masukkan Deskripsi baru"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/et_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_genre"
        android:textSize="18sp"
        android:hint="masukkan genre baru"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:layout_below="@id/et_genre"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>

</RelativeLayout>